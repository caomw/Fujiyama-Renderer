# a test secen

#plugins
OpenPlugin PlasticShader.so
OpenPlugin GlassShader.so
OpenPlugin ConstantShader.so

#Camera
NewCamera cam1 PerspectiveCamera
SetProperty3 cam1 position 5 4 5
SetProperty3 cam1 direction -1 -.5 -1

#Light
NewLight light1 SpotLight
SetProperty3 light1 position 0 12 0

#Texture
NewTexture tex1 ../mip/uffizi-large.mip

#Shader
NewShader obj_shader1 PlasticShader
#SetProperty3 obj_shader1 diffuse .8 .5 .3342
#NewShader obj_shader1 GlassShader

NewShader floor_shader PlasticShader

NewShader dome_shader ConstantShader

#Mesh
#NewMesh obj_mesh   ../mesh/cup.mesh
#NewMesh obj_mesh   ../mesh/sphere2.mesh
#NewMesh obj_mesh   ../mesh/teapot2.mesh
NewMesh obj_mesh   ../mesh/bunny.mesh
#NewMesh obj_mesh   ../mesh/happy.mesh
#NewMesh obj_mesh   ../mesh/dragon_ascii_small.mesh
#NewMesh obj_mesh   ../mesh/xyzrgb_dragon_ascii_small.mesh
NewMesh floor_mesh ../mesh/floor.mesh
NewMesh dome_mesh  ../mesh/dome.mesh

#ObjectInstance
NewObjectInstance  obj1    obj_mesh
AssignShader obj1 obj_shader1
SetProperty3       obj1   scale 2 2 2

#NewObjectInstance  floor1  floor_mesh
#SetProperty3       floor1  translate -2 0 -2
#AssignShader       floor1 floor_shader

#NewObjectInstance  dome1   dome_mesh
#SetProperty3       dome1   scale .5 .5 .5
#AssignShader       dome1 dome_shader
AssignTexture      dome_shader texture tex1

#FrameBuffer
NewFrameBuffer fb1 rgba

#Renderer
NewRenderer       ren1
AssignCamera      ren1 cam1
AssignFrameBuffer ren1 fb1
SetProperty2 ren1 resolution 320 240
#SetProperty2 ren1 resolution 160 120
#SetProperty4 ren1 render_region 0 0 80 60
#SetProperty4 ren1 render_region 40 30 120 90
#SetProperty2 ren1 pixelsamples 1 1
#SetProperty2 ren1 tilesize 64 64

#Rendering
RenderScene ren1

#Output
SaveFrameBuffer fb1 ../test.fb

